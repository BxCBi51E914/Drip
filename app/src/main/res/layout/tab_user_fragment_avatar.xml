<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_avatar"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            style="@style/button_wrapper_style"
            android:id="@+id/signInOrSignUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/sign_in_or_sign_up"
            android:textColor="@color/qmui_s_link_color"
            app:qmui_borderColor="@color/qmui_s_link_color"
            app:qmui_borderWidth="1px"
            app:qmui_radius="20dp"/>
    </LinearLayout>

</FrameLayout>